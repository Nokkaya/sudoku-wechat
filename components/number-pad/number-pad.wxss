/* components/number-pad/number-pad.wxss */
.number-pad {
  padding: 32rpx;
  background: white;
}

.number-grid {
  display: grid;
  grid-template-columns: repeat(9, 1fr);
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.number-btn {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.15s ease;
  border: 2rpx solid transparent;
}

.number-btn:active {
  transform: scale(0.92);
  background: #00b894;
  border-color: #00b894;
}

.number-btn:active .number-text {
  color: white;
}

.number-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3436;
  font-family: -apple-system, "SF Mono";
}

.action-row {
  display: flex;
  justify-content: center;
}

.clear-btn {
  flex: 0 0 auto;
  min-width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: #ff6b6b;
  border-radius: 16rpx;
  transition: all 0.15s ease;
}

.clear-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.clear-icon {
  font-size: 36rpx;
  color: white;
}

.clear-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
}

/* 小屏幕适配 */
@media (max-width: 375px) {
  .number-grid {
    gap: 8rpx;
  }
  
  .number-text {
    font-size: 32rpx;
  }
  
  .clear-btn {
    height: 72rpx;
  }
}
