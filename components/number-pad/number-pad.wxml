<!--components/number-pad/number-pad.wxml-->
<view class="number-pad">
  <!-- 数字按钮 1-9 -->
  <view class="number-grid">
    <view 
      class="number-btn"
      wx:for="{{9}}"
      wx:key="index"
      data-number="{{index + 1}}"
      bindtap="onNumberTap"
    >
      <text class="number-text">{{index + 1}}</text>
    </view>
  </view>
  
  <!-- 清除按钮 -->
  <view class="action-row">
    <view class="clear-btn" bindtap="onClearTap">
      <text class="clear-icon">⌫</text>
      <text class="clear-text">清除</text>
    </view>
  </view>
</view>
